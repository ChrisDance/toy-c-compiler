{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "removeComments": false,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"],
  "ts-node": {
    "compilerOptions": {
      "sourceMap": true,
      "inlineSourceMap": false
    }
  }
}
